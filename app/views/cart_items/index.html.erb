<h1>cart Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>product Title</th>
      <th>Product Price</th>
      <th >Quantity</th>
      <th >Total Price</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.product.title %></td>
        <td class='price'><%= cart_item.product.price %></td>
        <td><%= number_field_tag 'quantity',cart_item.quantity,id: cart_item.id, class: "my-select-box"%></td>
        <td><%= number_to_currency(cart_item.total_price)%></td>
        <td>
          <%= link_to 'Destroy', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
