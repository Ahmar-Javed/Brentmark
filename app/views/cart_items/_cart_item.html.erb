<tr>
  <td><%= cart_item.product.title %></td>
    <td class='price'><%= cart_item.product.price %></td>
    <td><%= number_field_tag 'quantity' ,cart_item.quantity,id: cart_item.id, min: 0, class: "my-select-box"%></td>
    <td><%= number_to_currency(cart_item.total_price)%></td>
    <td>
      <%= link_to 'Destroy', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </td>
</tr>
