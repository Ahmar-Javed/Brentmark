<div class="jumbotron jumbotron-fluid">
  <div class="container ShowContainer">

    <h3>Name:</h3>
    <p><%= current_user.username %></p>

    <h3>Order Details</h3>

    <% @order_items.each do |order_item| %>
      <h4>Product Title: <%= order_item.product.title %></h4>
      <p>Product Price: <%= order_item.product.price %></p>
      <p>Product ID: <%= order_item.product.id %></p>
      <p>Product Quantity: <%= order_item.quantity %></p>
    <% end %>
    <%= link_to 'Back', admin_coupons_path, class: "btn btn-dark margin-top" %>

  </div>
</div>
