<div class="jumbotron">
  <h2>Sign up</h2>

  <%= form_for @user, url: edit_admin_user_path,remote: true do |f| %>
  
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :firstname, autofocus: true, class: "form-control", autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :lastname, autofocus: true, class: "form-control", autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :user_name %><br />
      <%= f.text_field :username, autofocus: true, class: "form-control"%>
    </div>

    <div class="actions">
      <%= f.submit "Update User", class: "btn btn-primary margin-top button" %>
    </div>

  <% end %>

   <%= link_to 'Back', admin_users_path , class: "btn btn-dark margin-top"  %>

</div>
