<div class="card" id="card-dimension">
  <div class="center">
    <div class="card-body">
      <h1 class="Login">Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <%= f.label :"enter username or email", class: "margin-bottom" %><br />
          <%= f.text_field :login, autofocus: true, class: "form-control",  autocomplete: "email" %>
        </div>

        <div>
          <%= f.label :password, class: "margin-bottom" %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>

          <div>
            <%= f.check_box :remember_me %>
            <label class="form-check-label margin-top" for="exampleCheck1">Remember Me</label>
          </div>

        <% end %>

        <div class="actions">
          <%= f.submit "Log in",class: "btn btn-primary margin-bottom button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
       </div>
  </div>
</div>
<div class="invisible"><%= render(template: 'devise/registrations/new', resource: resource)%></div>

